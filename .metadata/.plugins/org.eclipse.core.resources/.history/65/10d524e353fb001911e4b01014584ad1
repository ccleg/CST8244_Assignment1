#include <stdio.h>
#include <stdlib.h>
#include <process.h>
#include <string.h>
#include <errno.h>
#include <sys/neutrino.h>

#include "ASS1.h"
Person_T person;
int main(int argc, char* argv) {
	
	if (argc != 2){
		fprintf(stderr,"Invalid number of arguments.");
		exit(EXIT_FAILURE);
	}

	pid_t display_pid = atoi(argv[1]);

	int chid;
	char* input_msg;
	char* display_msg;
	int coid;
	int rcvid;
	chid = ChannelCreate(0);

	if(chid == -1){
		fprintf(stderr, "Failed to create a channel");
		exit(EXIT_FAILURE);
	}
	coid = ConnectAttach(ND_LOCAL_NODE, input_pid, 1, _NTO_SIDE_CHANNEL, 0);
	if (coid == -1) {
		perror("Channel could not be attached\n");
		exit(EXIT_FAILURE);
	}
	while(1){
	rcvid = MsgReceive(chid, input_msg, sizeof(input_msg), NULL);
	while(person.side == 0){
	setStartSide(input_msg);
	}




	}







	return EXIT_SUCCESS;
}
void setStartSide(char* side){
	if(strcmp(side,"ls") == 0){
			person.side = LEFT;
		}
	if(strcmp(side,"rs") == 0){
			person.side = RIGHT;
		}
}
